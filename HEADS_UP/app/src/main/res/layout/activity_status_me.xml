<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weichen.jd_injuryprecaution_prototype.Status_me">

    <Spinner
        android:id="@+id/status_me_sp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/month"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/status_me_sp2"
        android:layout_alignBottom="@+id/status_me_sp2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></Spinner>

    <Spinner
        android:id="@+id/status_me_sp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="61dp"
        android:entries="@array/month"></Spinner>

    <Spinner
        android:id="@+id/status_me_sp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/month"
        android:layout_alignBaseline="@+id/status_me_sp4"
        android:layout_alignBottom="@+id/status_me_sp4"
        android:layout_alignLeft="@+id/status_me_sp1"
        android:layout_alignStart="@+id/status_me_sp1"></Spinner>

    <Spinner
        android:id="@+id/status_me_sp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/status_me_sp2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/status_me_sp2"
        android:layout_marginBottom="197dp"
        android:entries="@array/month"></Spinner>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textSize="20sp"
        android:layout_alignTop="@+id/status_me_sp2"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO"
        android:textSize="20sp"
        android:layout_alignTop="@+id/status_me_sp4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:src="@drawable/status_me1"
        android:layout_below="@+id/status_me_sp1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:src="@drawable/status_me2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
  />


</RelativeLayout>
