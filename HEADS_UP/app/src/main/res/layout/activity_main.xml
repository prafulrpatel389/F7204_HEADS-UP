<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weichen.jd_injuryprecaution_prototype.MainActivity"
    android:id="@+id/main_drawerLayout"
    android:label="Home" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/main_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New messages from Group A"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp" />
    <TextView
        android:id="@+id/main_surveys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Surveys appear"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        android:layout_alignTop="@+id/main_group"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/main_quizzes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Quizzes appear"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/main_surveys"
        android:layout_alignRight="@+id/main_surveys"
        android:layout_alignEnd="@+id/main_surveys" />

    <TextView
        android:id="@+id/main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome! John Doe"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/bott_nav_color_state"
        app:itemTextColor="@drawable/bott_nav_color_state"
        app:menu="@menu/bottom_navigation_main"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_group"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:text="Current Score"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/main_group"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:text="638"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/main"
            android:layout_above="@+id/textView15"
            android:layout_below="@+id/main_welcome"
            android:layout_alignLeft="@+id/main_quizzes"
            android:layout_alignStart="@+id/main_quizzes"
            android:layout_alignRight="@+id/main_surveys"
            android:layout_alignEnd="@+id/main_surveys" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/top_action_bar"
        android:layout_gravity="start"
        android:id="@+id/main_top_navigation"
        />


</android.support.v4.widget.DrawerLayout>
