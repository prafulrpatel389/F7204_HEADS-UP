<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weichen.jd_injuryprecaution_prototype.Status_local">


    <EditText
        android:id="@+id/local_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/local_check"
        android:layout_alignBottom="@+id/local_check"
        android:layout_toLeftOf="@+id/local_check"
        android:layout_toStartOf="@+id/local_check"
        android:ems="10"
        android:hint="Zip Code"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/local_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="1"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/local_rank"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Rank"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/local_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/local_rank"
        android:layout_marginTop="70dp"
        android:text="You are      % higher then averages of "
        android:layout_centerVertical="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Large" />

    <Button
        android:id="@+id/local_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView16"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/textView16"
        android:layout_toRightOf="@+id/textView16"
        android:text="Check" />

</RelativeLayout>
